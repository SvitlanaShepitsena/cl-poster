.card(layout='column')
    .bgc-grey-200.p
        span.fs-subhead.tc-grey-700.display-block {{event.title}}
    .div(layout-gt-sm="row" layout-sm='column' class='pt pb')
        .p(style='min-width: 200px')
            a.display-block.text-center(ui-sref='app.event-article' style='text-decoration:none')
                img(ng-src="https://s3-us-west-2.amazonaws.com/chicagobotanicgarden/white-flower.jpg" style='width:200px;margin:0px auto')
        div(class='ml mr')
            div.tc-grey-600.mb
                span.fs-caption {{event.startsAt|date:"short"}}
            span.display-block.fs-body-1.tc-black-2 {{event.about|limitTo:260}}
            div(layout='row' layout-align='end')
                button.btn.btn--xs.btn--grey.btn--flat(ui-sref='app.events.one-event({eid:event.svId})' ) {{'read-more'|translate}} >>
